{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "redis:7-alpine",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
        }
      ],
      "command": ["redis-server", "--appendonly", "yes"],
      "mountPoints": [
        {
          "sourceVolume": "redis-data",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "frontend",
      "image": "barik766/dnd-frontend:latest",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["backend"]
    },
    {
      "name": "backend",
      "image": "barik766/dnd-backend:latest",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 8080
        }
      ],
      "links": ["redis"],
      "environment": [
        {
          "name": "ConnectionStrings__Redis",
          "value": "redis:6379"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "redis-data",
      "host": {
        "sourcePath": "/var/app/current/redis-data"
      }
    }
  ]
}